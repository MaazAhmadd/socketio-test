generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id             String  @id @default(uuid())
  name           String?
  handle         String  @unique
  profilePicture String?
  isConnected    Boolean
  isLeader       Boolean
  micEnabled     Boolean
  Room           Room?   @relation(fields: [roomId], references: [id])
  roomId         String?
}

model VideoPlayer {
  id         String  @id @default(uuid())
  isPlaying  Boolean
  source     String
  duration   Int
  playStatus String
  Room       Room?   @relation(fields: [roomId], references: [id])
  roomId     String  @unique
}

model Room {
  id          String       @id @default(uuid())
  members     Member[]
  videoPlayer VideoPlayer?
  lastEmpty   BigInt
  status      String       @default("Public")
  kicked      Kicked[]
}

model Kicked {
  id           String @id @default(uuid())
  memberHandle String
  room         Room   @relation(fields: [roomId], references: [id])
  roomId       String
}
