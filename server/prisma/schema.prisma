 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id             Int     @id @default(autoincrement())
  name           String?
  handle         String  @unique
  profilePicture String?
  isConnected    Boolean
  isLeader       Boolean
  micEnabled     Boolean
  Room           Room?   @relation(fields: [roomId], references: [id])
  roomId         Int?
}

model VideoPlayer {
  id         Int     @id @default(autoincrement())
  isPlaying  Boolean
  source     String
  duration   Int
  playStatus String
  Room       Room?   @relation(fields: [roomId], references: [id])
  roomId     Int     @unique
}

model Room {
  id          Int          @id @default(autoincrement())
  members     Member[]
  videoPlayer VideoPlayer?
  lastEmpty   BigInt
  status      String       @default("Public")
  kicked      Kicked[]
}


model Kicked {
  id     Int    @id @default(autoincrement())
  memberHandle  String
  roomId Int
  room   Room   @relation(fields: [roomId], references: [id])
}
